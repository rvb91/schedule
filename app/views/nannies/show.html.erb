<div class='col-md-12'>
  <h2><%= @nanny.name %></h2>
</div>

<div class='col-md-6'>
  <h4>Available Slots</h4>
  <table class="table">
    <tr>
      <th>From</th>
      <th>To</th>
      <th></th>
    </tr>

    <% @nanny.slots.reserveable.each do |slot| %>
      <tr>
        <td><%= format_time(slot.start_time) %></td>
        <td><%= format_time(slot.end_time) %></td>
        <td><%= link_to "Reserve", reserve_nanny_path(slot), method: :patch, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </table>

</div>
